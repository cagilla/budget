<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :web_address %><br />
    <%= f.text_field :web_address, :autocomplete => :off %>
  </div>
  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name, :autocomplete => :off %>
  </div>
	<div>
		<%= f.label :password, 'Password' %>:
		<%= f.password_field :password, size: 40, :autocomplete => :off %>
	</div>
	<div>
		<%= f.label :password_confirmation, 'Confirm' %>:
		<%= f.password_field :password_confirmation, size: 40, :autocomplete => :off %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
